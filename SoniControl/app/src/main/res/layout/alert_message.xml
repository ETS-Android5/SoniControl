<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- NOTE: txtDiscovered is replaced by the dialog title.-->
    <TextView
        android:id="@+id/txtDiscovered"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_marginTop="8dp"
        android:text="@string/alertDialog_text_ultrasonic_signal_detected"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/txtSignalType"
        android:layout_marginStart="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textAlignment="center"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/placeholderSpectrogram"
        tools:text="@string/gui_technology"
        android:layout_marginLeft="24dp" />

    <ImageView
        android:id="@+id/placeholderSpectrogram"
        android:layout_width="wrap_content"
        android:layout_height="204dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtSignalType"
        app:srcCompat="@drawable/spectrum_landscape"
        android:visibility="gone"/>

    <at.ac.fhstp.sonicontrol.ui.SpectrogramView
        android:id="@+id/spectrogram_view"
        android:layout_width="fill_parent"
        android:layout_height="204dp"
        android:layout_marginTop="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/placeholderSpectrogram"
        />

    <android.support.v4.widget.ContentLoadingProgressBar
        android:id="@+id/progressBar"
        style="@android:style/Widget.ProgressBar.Small.Inverse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        app:layout_constraintBottom_toBottomOf="@id/spectrogram_view"
        app:layout_constraintEnd_toEndOf="@id/spectrogram_view"
        app:layout_constraintStart_toStartOf="@id/spectrogram_view"
        app:layout_constraintTop_toTopOf="@id/spectrogram_view"
        tools:visibility="invisible" />

    <Button
        android:id="@+id/btnReplay"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/alertDialog_option_play"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@id/txtProceed"
        app:layout_constraintEnd_toStartOf="@id/cbSharing"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spectrogram_view" />

    <Button
        android:id="@+id/btnShare"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="Share"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnReplay"
        app:layout_constraintTop_toTopOf="@id/btnReplay" />

    <TextView
        android:id="@+id/txtProceed"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:layout_marginTop="16dp"
        android:text="@string/how_to_proceed"
        android:textAlignment="center"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnReplay"
        app:layout_constraintBottom_toTopOf="@id/btnBlockAlways"/>

    <Button
        android:id="@+id/btnBlockAlways"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@string/alertDialog_option_jam_always_here"
        app:layout_constraintEnd_toStartOf="@id/btnDismissAlwaysHere"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnBlockThisTime" />

    <Button
        android:id="@+id/btnDismissAlwaysHere"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@string/alertDialog_option_dismiss_always_here"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnBlockAlways"
        app:layout_constraintBottom_toTopOf="@id/btnDismissThisTime" />

    <Button
        android:id="@+id/btnBlockThisTime"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@string/alertDialog_option_jam_this_time"
        app:layout_constraintEnd_toStartOf="@id/btnDismissThisTime"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/txtNoLocation"/>

    <Button
        android:id="@+id/btnDismissThisTime"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@string/alertDialog_option_dismiss_this_time"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnBlockThisTime"
        app:layout_constraintBottom_toTopOf="@id/txtNoLocation"/>

    <TextView
        android:id="@+id/txtNoLocation"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/txtAlertDate" />

    <TextView
        android:id="@+id/txtAlertDate"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <CheckBox
        android:id="@+id/cbSharing"
        android:layout_width="165dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/alert_share_your_detection"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnReplay"
        app:layout_constraintTop_toTopOf="@+id/btnReplay" />

</android.support.constraint.ConstraintLayout>