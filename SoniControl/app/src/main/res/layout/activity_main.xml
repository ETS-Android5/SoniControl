<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/btnPlay"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:layout_toLeftOf="@+id/btnExit"
        android:background="@android:color/darker_gray"
        android:src="@drawable/ic_play_arrow_white_48dp" />

    <ImageButton
        android:id="@+id/btnStorLoc"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignTop="@+id/btnPlay"
        android:layout_toEndOf="@+id/btnExit"
        android:layout_toRightOf="@+id/btnExit"
        android:background="@android:color/darker_gray"
        android:src="@drawable/ic_save_white_48dp" />

    <ImageButton
        android:id="@+id/btnStop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnSettings"
        android:layout_alignEnd="@+id/btnPlay"
        android:layout_alignLeft="@+id/btnPlay"
        android:layout_alignRight="@+id/btnPlay"
        android:layout_alignStart="@+id/btnPlay"
        android:layout_alignTop="@+id/btnSettings"
        android:background="@android:color/darker_gray"
        android:src="@drawable/button_stop" />

    <ImageButton
        android:id="@+id/btnExit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnStop"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@android:color/darker_gray"
        android:src="@drawable/ic_clear_white_48dp" />

    <ImageButton
        android:id="@+id/btnSettings"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignEnd="@+id/btnStorLoc"
        android:layout_alignRight="@+id/btnStorLoc"
        android:layout_below="@+id/btnStorLoc"
        android:layout_marginTop="21dp"
        android:layout_toRightOf="@+id/btnExit"
        android:background="@android:color/darker_gray"
        android:src="@drawable/ic_settings_white_48dp" />

</RelativeLayout>
