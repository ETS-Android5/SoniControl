<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity">
<RelativeLayout  android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/textViewStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="@string/StatusNotificationOnHoldMessage"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <androidx.core.widget.ContentLoadingProgressBar
        android:id="@+id/statusLoadingBar"
        style="@android:style/Widget.ProgressBar.Small.Inverse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textViewStatus"
        android:layout_marginBottom="2dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_toEndOf="@id/textViewStatus"
        android:layout_toRightOf="@id/textViewStatus"
        android:indeterminate="true"
        tools:visibility="visible" />

    <View
        android:id="@+id/statusDivider"
        style="@style/Divider"
        android:layout_marginTop="8dp"
        android:layout_below="@id/textViewStatus"
        />

    <ImageButton
        android:id="@+id/btnPlay"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@id/statusDivider"
        android:layout_marginTop="24dp"
        android:layout_toLeftOf="@+id/btnExit"
        android:background="@android:color/darker_gray"
        android:src="@drawable/ic_play_arrow_white_48dp" />

    <ImageButton
        android:id="@+id/btnStorLoc"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignTop="@+id/btnPlay"
        android:layout_toEndOf="@+id/btnExit"
        android:layout_toRightOf="@+id/btnExit"
        android:background="@android:color/darker_gray"
        android:src="@drawable/ic_view_list_white_48dp" />

    <ImageButton
        android:id="@+id/btnPause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnSettings"
        android:layout_alignEnd="@+id/btnPlay"
        android:layout_alignLeft="@+id/btnPlay"
        android:layout_alignRight="@+id/btnPlay"
        android:layout_alignStart="@+id/btnPlay"
        android:layout_alignTop="@+id/btnSettings"
        android:background="@android:color/darker_gray"
        android:src="@drawable/ic_pause_white_48dp" />

    <ImageButton
        android:id="@+id/btnExit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnPause"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@android:color/darker_gray"
        android:src="@drawable/ic_clear_white_48dp" />

    <ImageButton
        android:id="@+id/btnSettings"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignEnd="@+id/btnStorLoc"
        android:layout_alignRight="@+id/btnStorLoc"
        android:layout_below="@+id/btnStorLoc"
        android:layout_marginTop="21dp"
        android:layout_toRightOf="@+id/btnExit"
        android:background="@android:color/darker_gray"
        android:src="@drawable/ic_settings_white_48dp" />


</RelativeLayout>
</ScrollView>