<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:id="@+id/PlayPause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/radioGroup1"
        android:layout_alignEnd="@+id/radioGroup1"
        android:layout_alignRight="@+id/radioGroup1"
        android:onClick="SuperpoweredExample_PlayPause"
        android:text="PLAY" />

    <Button
        android:id="@+id/spamPlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/radioGroup1"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/radioGroup1"
        android:layout_marginTop="35dp"
        android:onClick="SuperpoweredExample_spamPlay"
        android:text="SPAM" />

    <SeekBar
        android:id="@+id/ampFader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/bpHighFader"
        android:layout_marginTop="35dp" />

    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spamPlay"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/radio0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="NEARBY" />

        <RadioButton
            android:id="@+id/radio1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WHITENOISE" />

    </RadioGroup>

    <SeekBar
        android:id="@+id/bpHighFader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/radioGroup1"
        android:layout_marginTop="35dp"
        />

    <SeekBar
        android:id="@+id/pulseFader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/ampFader"
        android:layout_marginTop="35dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:layout_below="@+id/bpHighFader"
        android:layout_marginTop="13dp"
        android:text="Amplitude"
        android:textAppearance="@android:style/TextAppearance.Material"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:layout_below="@+id/ampFader"
        android:layout_marginTop="13dp"
        android:text="Pulses"
        android:textAppearance="@android:style/TextAppearance.Material"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Highpass"
        android:textAppearance="@android:style/TextAppearance.Material"
        android:textSize="18sp"
        android:layout_below="@+id/radioGroup1"
        android:layout_alignLeft="@+id/radioGroup1"
        android:layout_alignStart="@+id/radioGroup1" />

    <TextView
        android:id="@+id/txtPulseValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignLeft="@+id/txtAmpValue"
        android:layout_alignStart="@+id/txtAmpValue"
        android:text="TextView"
        android:textAppearance="@android:style/TextAppearance.Material"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/txtAmpValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView4"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignLeft="@+id/txtHighValue"
        android:layout_alignStart="@+id/txtHighValue"
        android:text="TextView"
        android:textAppearance="@android:style/TextAppearance.Material"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/txtHighValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView2"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:layout_toEndOf="@+id/textView4"
        android:layout_toRightOf="@+id/textView4"
        android:text="TextView"
        android:textAppearance="@android:style/TextAppearance.Material"
        android:textSize="18sp" />

</RelativeLayout>
