
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent" tools:context=".MainActivity">

    <Button
        android:id="@+id/btnStart"
        android:layout_width="224dp"
        android:layout_height="57dp"
        android:text="Start"
        tools:layout_editor_absoluteX="80dp"
        tools:layout_editor_absoluteY="57dp" />

        <Button
            android:id="@+id/btnStop"
            android:layout_width="224dp"
            android:layout_height="57dp"
            android:text="Stop"
            tools:layout_editor_absoluteX="80dp"
            tools:layout_editor_absoluteY="57dp"
            android:layout_above="@+id/textView3"
            android:layout_alignParentEnd="true" />

        <SeekBar
        android:id="@+id/pulseFader"
        android:layout_width="346dp"
        android:layout_height="21dp"
        android:layout_below="@+id/btnStart"
        tools:layout_editor_absoluteY="138dp"
        tools:layout_editor_absoluteX="16dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

        <SeekBar
            android:id="@+id/volumeFader"
            android:layout_width="346dp"
            android:layout_height="21dp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="138dp"
            android:layout_below="@+id/textViewReal"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView5"
            android:layout_marginTop="18dp"
            android:text="1. Band"
            android:textAppearance="@android:style/TextAppearance.Material"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="152dp"
            tools:layout_editor_absoluteY="177dp" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/txtDownFreqBand1"
            android:layout_toStartOf="@+id/btnStop"
            android:text="2. Band"
            android:textAppearance="@android:style/TextAppearance.Material"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="152dp"
            tools:layout_editor_absoluteY="177dp" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView10"
            android:layout_alignBottom="@+id/textView10"
            android:layout_marginStart="29dp"
            android:layout_toEndOf="@+id/textView10"
            android:text="3. Band"
            android:textAppearance="@android:style/TextAppearance.Material"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="152dp"
            tools:layout_editor_absoluteY="177dp" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView11"
            android:layout_alignBottom="@+id/textView11"
            android:layout_marginStart="24dp"
            android:layout_toEndOf="@+id/textView11"
            android:text="4. Band"
            android:textAppearance="@android:style/TextAppearance.Material"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="152dp"
            tools:layout_editor_absoluteY="177dp" />

        <EditText
            android:id="@+id/txtUpFreqBand1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/txtDownFreqBand1"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/txtDownFreqBand2"
            android:ems="10"
            android:inputType="number" />

        <EditText
            android:id="@+id/txtDownFreqBand1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView9"
            android:ems="10"
            android:inputType="number"
            android:layout_alignEnd="@+id/textView9" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/pulseFader"
            android:layout_marginTop="11dp"
            android:text="Length"
            android:textAppearance="@android:style/TextAppearance.Material"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="152dp"
            tools:layout_editor_absoluteY="177dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/volumeFader"
            android:text="Volume"
            android:textAppearance="@android:style/TextAppearance.Material"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="152dp"
            tools:layout_editor_absoluteY="177dp" />

        <TextView
        android:id="@+id/textViewReal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Power2 Value"
        android:textAppearance="@android:style/TextAppearance.Material"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="152dp"
        tools:layout_editor_absoluteY="177dp"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView2"
            android:text="Power2 Value"
            android:textAppearance="@android:style/TextAppearance.Material"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="152dp"
            tools:layout_editor_absoluteY="177dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView"
            android:text="Power2 Value"
            android:textAppearance="@android:style/TextAppearance.Material"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="152dp"
            tools:layout_editor_absoluteY="177dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView4"
            android:text="Power2 Value"
            android:textAppearance="@android:style/TextAppearance.Material"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="152dp"
            tools:layout_editor_absoluteY="177dp" />

        <EditText
            android:id="@+id/txtUpFreqBand3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/txtDownFreqBand3"
            android:layout_alignStart="@+id/txtDownFreqBand3"
            android:layout_below="@+id/txtDownFreqBand3"
            android:ems="10"
            android:inputType="number" />

        <EditText
            android:id="@+id/txtUpFreqBand4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/txtDownFreqBand4"
            android:layout_alignStart="@+id/txtDownFreqBand4"
            android:layout_below="@+id/txtDownFreqBand4"
            android:ems="10"
            android:inputType="number" />

        <EditText
            android:id="@+id/txtUpFreqBand2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView10"
            android:layout_alignStart="@+id/txtDownFreqBand2"
            android:layout_below="@+id/txtDownFreqBand2"
            android:ems="10"
            android:inputType="number" />

        <EditText
            android:id="@+id/txtDownFreqBand2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:layout_alignBaseline="@+id/txtDownFreqBand1"
            android:layout_alignBottom="@+id/txtDownFreqBand1"
            android:layout_alignStart="@+id/textView10"
            android:layout_alignEnd="@+id/textView10" />

        <EditText
            android:id="@+id/txtDownFreqBand4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:layout_below="@+id/textView12"
            android:layout_alignStart="@+id/textView12"
            android:layout_alignEnd="@+id/textView12" />

        <EditText
            android:id="@+id/txtDownFreqBand3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView11"
            android:layout_alignStart="@+id/textView11"
            android:layout_below="@+id/textView11"
            android:ems="10"
            android:inputType="number" />

        <Spinner
            android:id="@+id/spnNumberOfBands"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="13dp"
            android:layout_toEndOf="@+id/textView11" />

    </RelativeLayout>

